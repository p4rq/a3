<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <!-- Подключение Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="#">Your App</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">

              <li class="nav-item">
                <a class="nav-link" href="/download/news">Download</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/exchangeRate">exchangeRate</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/">News</a>
              </li>
            </ul>
          </div>
        </nav>
    <h1 class="mb-4">Admin Panel</h1>

    <!-- Форма для создания нового пользователя -->
    <form action="/admin/create" method="post" class="mb-4">
        <div class="mb-3">
            <label for="username" class="form-label">Username:</label>
            <input type="text" id="username" name="username" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="userId" class="form-label">User ID:</label>
            <input type="text" id="userId" name="userId" class="form-control" required>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" id="isAdmin" name="isAdmin" class="form-check-input">
            <label for="isAdmin" class="form-check-label">Admin</label>
        </div>

        <button type="submit" class="btn btn-primary">Create User</button>
    </form>

    <!-- Отображение списка пользователей -->
    <ul class="list-group">
        <% users.forEach((user) => { %>
            <li class="list-group-item">
                <strong><%= user.username %></strong>
                <span><%= user.userId %></span>
                <span><%= user.isAdmin ? 'Admin' : 'User' %></span>

                <!-- Форма для обновления данных пользователя -->
                <form action="/admin/update/<%= user._id %>" method="post" class="mb-2">
                    <div class="mb-3">
                        <label for="newUsername" class="form-label">New Username:</label>
                        <input type="text" id="newUsername" name="newUsername" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="newUserId" class="form-label">New User ID:</label>
                        <input type="text" id="newUserId" name="newUserId" class="form-control">
                    </div>
                    

                    <div class="mb-3 form-check">
                        <input type="checkbox" id="newIsAdmin" name="newIsAdmin" class="form-check-input">
                        <label for="newIsAdmin" class="form-check-label">Admin</label>
                    </div>

                    <button type="submit" class="btn btn-warning">Update</button>
                </form>

                <!-- Форма для удаления пользователя -->
                <form action="/admin/delete/<%= user._id %>" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <!-- Подключение Bootstrap JS (если необходимо) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
